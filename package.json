{
  "name": "Flame",
  "version": "1.0.0",
  "description": "Heat map generator from list of points",
  "main": "app.js",
  "browserify": {
    "transform": [
      [
        "babelify"
      ]
    ]
  },
  "scripts": {
    "build:css": "sass public/css/app.scss public/css/bundle.css",
    "build:js": "npm run lint && browserify --exclude canvas public/js/main.js -o public/js/bundle.js",
    "build": "time (npm run build:js && npm run build:css) && echo \"bundle.js\" $(stat -f \"%z\" public/js/bundle.js) \"bytes\"",
    "watch": "fswatch -0 -xnr -Ie \"bundle\\..*$\" public/js public/css | xargs -0 -n 1 -I {} npm run build",
    "lint": "eslint .",
    "start": "node server.js",
    "test": "npm run lint && jasmine"
  },
  "author": "Maythee Anegboonlap <null@llun.in.th>",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^0.8.5",
    "body-parser": "^1.14.2",
    "canvas": "^1.3.9",
    "co": "^4.6.0",
    "connect-session-sequelize": "^3.0.0",
    "dotenv": "^2.0.0",
    "express": "^4.13.4",
    "express-session": "^1.13.0",
    "fs-extra": "^0.26.5",
    "history": "^2.0.0-rc2",
    "mapheat": "^1.0.3",
    "moment": "^2.11.1",
    "oauth": "^0.9.14",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-redux": "^4.1.2",
    "react-router": "^2.0.0-rc5",
    "redux": "^3.1.4",
    "sequelize": "^3.18.0",
    "simpleheat": "llun/simpleheat#gh-pages",
    "sqlite3": "^3.1.1",
    "turf": "^2.0.2",
    "whatwg-fetch": "^0.11.0"
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-core": "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "deasync": "^0.1.4",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^4.0.0",
    "eslint-plugin-react": "^3.16.1"
  }
}
