{
  "name": "Flame",
  "version": "1.0.0",
  "description": "Heat map generator from list of points",
  "main": "app.js",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "build:css": "sass public/css/app.scss public/css/bundle.css",
    "build:js": "browserify --fast public/js/main.js -o public/js/bundle.js",
    "build": "time (npm run build:js && npm run build:css) && echo \"bundle.js\" $(stat -f \"%z\" public/js/bundle.js) \"bytes\"",
    "watch": "fswatch -0 -xnr -Ie \"bundle\\..*$\" public/js public/css | xargs -0 -n 1 -I {} npm run build",
    "start": "node server.js"
  },
  "author": "Maythee Anegboonlap <null@llun.in.th>",
  "license": "ISC",
  "dependencies": {
    "express": "^4.13.3",
    "moment": "^2.10.6",
    "react": "^0.14.2",
    "react-dom": "^0.14.2",
    "react-router": "^1.0.0-rc4",
    "simpleheat": "^0.3.0",
    "sqlite3": "^3.1.1",
    "turf": "^2.0.2",
    "whatwg-fetch": "^0.10.1"
  },
  "devDependencies": {
    "babel": "^6.0.15",
    "babel-preset-es2015": "^6.1.2",
    "babel-preset-react": "^6.1.2",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1"
  }
}
