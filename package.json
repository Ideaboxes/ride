{
  "name": "ride",
  "version": "1.0.0",
  "description": "Heat map generator from list of points",
  "main": "app.js",
  "browserify": {
    "transform": [
      [
        "babelify"
      ]
    ]
  },
  "scripts": {
    "build:css": "sass public/css/app.scss public/css/bundle.css",
    "build:js": "browserify --exclude canvas public/js/main.js -o public/js/bundle.js",
    "build": "npm run build:js && npm run build:css",
    "watch": "fswatch -0 -xnr -Ie \"bundle\\..*$\" public/js public/css | xargs -0 -n 1 -I {} npm run build",
    "lint": "eslint .",
    "start": "node server.js",
    "test": "npm run lint && jasmine",

    "sync": "node scripts/sync.js"
  },
  "author": "Maythee Anegboonlap <null@llun.in.th>",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^0.8.5",
    "body-parser": "^1.15.0",
    "canvas": "^1.3.12",
    "co": "^4.6.0",
    "connect-session-sequelize": "^3.0.0",
    "dotenv": "^2.0.0",
    "express": "^4.13.4",
    "express-session": "^1.13.0",
    "fs-extra": "^0.26.7",
    "history": "^2.0.1",
    "mapheat": "^1.0.3",
    "moment": "^2.12.0",
    "oauth": "^0.9.14",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-redux": "^4.4.1",
    "react-router": "^2.0.1",
    "redux": "^3.3.1",
    "redux-thunk": "^2.0.1",
    "request": "^2.69.0",
    "sequelize": "^3.20.0",
    "simpleheat": "llun/simpleheat#gh-pages",
    "sqlite3": "^3.1.2",
    "turf": "^2.0.2",
    "whatwg-fetch": "^0.11.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "deasync": "^0.1.4",
    "eslint": "^2.5.1",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.2.3"
  }
}
